$primary-colour = #e37;
$secondary-colour = #e37;
$text-colour = #fff;
$back-colour = #999;

.eduportal-page
  display: flex;
  flex-direction: column;
  //align-items: stretch;
  justify-content: center;
  padding-top: 6em;
  background: url(./assets/classifier-background.png) no-repeat center center;
  background-size: cover;
  border: 1px dotted $primary-colour;
  color: $text-colour;
  
  .subheader
    border-radius: 1em;
    padding: 1em;
    margin: 0 2em;
    background: #ccc;
    
    a
      padding: 0.5em 1em;
      border-radius: 1em;
      margin: 0 0.5em;
      background: $primary-colour
      color: #fff;
      text-decoration: none;

  .content
    display: flex;
    flex-direction: row;
    //align-items: stretch;
    justify-content: center;
    padding: 1em;
    border: 1px dotted $primary-colour;
  
    @media screen and (max-width: 900px)
      flex-wrap: wrap;
      
    .text
      width: 100%;
      padding: 1em;
      margin: 0 1em 1em 1em;
      background: $back-colour;
      border-radius: 1em;
    
    .controls
      width: 20%;
      margin: 0 1em 1em 1em;
      background: $back-colour;
      border-radius: 1em;
      
      .console-in,
      .console-out
        padding: 1em;
        color: #333;
        background: #ccc;
        border-radius: 1em;
      
    .visuals
      width: 80%;
      margin: 0 1em 1em 1em;
      padding: 1em;
      background: $back-colour;
      border-radius: 1em;

      canvas
        display: block;
        width: 100%;
        background: #333;
